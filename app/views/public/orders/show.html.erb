<main class="public_order_show">

  <div class="public_order_show_title">
    <h3>注文履歴詳細</h3>
  </div>

  <div class="public_order_info">
    <table>
      <tr><th>注文情報</th></tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
    </table>
  </div>

  <div class="public_order_price_info">
    <table>
      <tr><th>請求情報</th></tr>
      <tr>
        <td>商品合計</td>
        <td>
          <% @sum=0 %>
          <% @order_details.each do |detail| %>
          <% @sum += detail.item.add_tax_price * detail.amount %>
          <% end %>
          <%= @sum.to_s(:delinited) %>
        </td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td></td>
      </tr>
    </table>
  </div>

  <div class="public_order_item_info">
    <table>
      <tr>
        <td>商品</td>
        <td>単価(税込)</td>
        <td>個数</td>
        <td>小計</td>
      </tr>
      <% @order_details.each do |detail| %>
      <tr>
        <td><%= detail.item.name %></td>
        <td><%= detail.price %></td>
        <td><%= detail.amount %></td>
        <td><%= detail.add_tax_price * detail.amount %></td>
      </tr>
      <% end %>
    </table>
  </div>
</main>