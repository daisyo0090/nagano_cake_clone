<main class="public_customer_show_main">
  <h3>マイページ</h3>
  <table>
    <tr>
      <th>登録情報</th> <td><%= link_to "編集する", edit_customers_path(current_customer) %></td>
    </tr>
    <tr>
      <table>
        <tr>
          <td>氏名</td> <td><%= current_customer.last_name + current_customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td> <td><%= current_customer.last_name_kana + current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td> <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td> <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td> <td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td> <td><%= current_customer.email %></td>
        </tr>
      </table>
    </tr>
    <tr>
      <th>配送先</th> <td><%= link_to "一覧を見る", addresses_path %></td>
    </tr>
    <tr>
      <th>注文履歴</th> <td><%= link_to "一覧を見る", orders_path %></td>
    </tr>
  </table>
</main>