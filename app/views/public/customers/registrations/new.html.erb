<main class="public_customer_sign_up_main">
  <h2>新規会員登録</h2>
  <div class="public_customer_sign_up_main_table">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/customers/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <td>名前</td>
        <td>(姓)</td>
        <td><%= f.text_field :last_name %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>(セイ)</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td colspan="3" ><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.telephone_field :telephone_number %></td>
      </tr>
      <tr>
        <td>パスワード(６文字以上)</td>
        <td></td>
        <td><%= f.password_field :encrypted_password %></td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</main>





