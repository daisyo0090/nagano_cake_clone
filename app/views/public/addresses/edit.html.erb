<main class="public_address_edit_main">
  <div class="public_address_edit_h3">
    <h3>配送先編集</h3>
  </div>
  <div class="public_address_edit_table">
    <%= form_with model: @address, url: address_path(@address.id), local: true do |f| %>
    <table>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td></td>
        <td><%= f.text_field :name %></td><td></td><td></td>
        <td><%= f.submit "変更内容を保存" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</main>