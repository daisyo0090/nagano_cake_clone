<main class="public_address_index_main">
  <div class="public_address_index_h3">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="public_address_index_new_table">
    <%= form_with model: @address,url: addresses_path, local: true do |f| %>
    <table>
      <tr>
        <td >郵便番号(ハイフンなし)</td><td></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td><td></td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>宛名</td><td></td>
        <td><%= f.text_field :name %></td><td></td><td><%= f.submit "新規登録" %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <div class="public_address_index_table">

    <table>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
      <% @addresses.each do |adrs| %>
      <tr>
        <td><%= adrs.postal_code %></td>
        <td><%= adrs.address %></td>
        <td><%= adrs.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(adrs.id) %>
          <%= link_to "削除する", address_path(adrs.id), method: :delete %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</main>