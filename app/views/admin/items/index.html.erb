<main class="item_main_index">
  <div class="item_main_index_h3">
    <h3>商品一覧</h3>
  </div>
  <div class="item_main_new_btn">
    <%= link_to "＋", new_admin_item_path %>
  </div>
  <div class="item_main_index_table">
    <table>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.genre_name %></td>
      </tr>
      <% end %>
    </table>
  </div>
</main>