<main class="item_main_new">
  <div class="item_main_new_h3">
    <h3>商品新規登録</h3>
  </div>
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
  <table class="item_main_new_table">
    <tr>
      <th>商品画像</th>
      <td>
        <%= f.attachment_field :image %>
      </td>
    </tr>
    <tr>
      <th>商品名</th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td>
        <%= f.text_area :introduction %>
      </td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td>
        <%= f.collection_select(:genre_id, @genres, :id, :genre_name)%>
      </td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td>
        <%= f.text_field :price %>円
      </td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </td>
    </tr>
  </table>
  <%= f.submit "新規登録" %>
  <% end %>
</main>