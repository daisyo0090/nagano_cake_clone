<main class="item_main_show">
  <div class="item_main_show_h3">
    <h3>商品詳細</h3>
  </div>
  <div class="item_main_show_image"><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></div>
  <div class="item_main_show_overview">
    <div class="item_main_show_table">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @itemgenre.genre_name %></td>
        </tr>
        <tr>
          <th>税抜価格</br>（税込価格）</th>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_active %></td>
        </tr>
      </table>
    </div>
    <div class="item_main_show_overview_link"><%= link_to '編集する',edit_item_path %></div>
  </div>
</main>