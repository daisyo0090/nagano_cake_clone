<main class="item_main_edit">
  <div class="item_main_edit_h3">
    <h3>商品編集</h3>
  </div>
  <div class="item_main_edit_table">
    <table>
      <tr>
        <th>商品画像</th>
        <%= form_with model: @item,url: admin_item_path(@item.id), local: true do |f| %>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select(:genre_id, @genres, :id, :genre_name)%></td>
      </tr>
      <tr>
        <th>税込価格</th>
        <td><%= f.text_field :price %></td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </td>
      </tr>
    </table>
    <div class="admin_edit_item_btn">
      <%= f.submit "変更を保存する" %>
    </div>
    <% end %>
  </div>
</main>